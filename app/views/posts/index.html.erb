<%= form_for @post, html: { multipart: true } do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>
  <%= form.label :image %>
  <%= form.file_field :image %>

  <%= form.submit "Submit" %>
<% end %>

<% @posts.each do |post| %>
<div class="item">
  <% if post.image? %>
  <p><%= image_tag post.image.url(:medium) %></p>
  <% end %>
  <p><%= post.message %></p>
  <% Time.zone = 'London' %>
  <% @user = (User.find_by(id: post.user_id)) %>
  <p><%= post.created_at.strftime("%e %B %Y %H:%M") %> by <%= @user.first_name %> (<%= @user.username %>) <%= @user.last_name %></p>

  <% if post.user_id == current_user.id %>
    <p><%= link_to "Edit", edit_post_path(post) %> |
    <%= link_to "Delete", post, :data => { :confirm => "Are you sure you want to delete this post?" }, :method => :delete %></p>
  <% end %>

</div>
  <hr />
<% end %>
