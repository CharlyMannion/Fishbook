<%= stylesheet_link_tag 'posts' %>
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=BioRhyme+Expanded" rel="stylesheet">

<%= render partial: 'form' %>

<% @posts.each do |post| %>
<div class="item">
  <% if post.image? %>
  <p><%= image_tag post.image.url(:medium) %></p>
  <% end %>
  <p><%= post.message %></p>
  <% Time.zone = 'London' %>
  <% @user = (User.find_by(id: post.user_id)) %>
  <p><%= post.created_at.strftime("%e %B %Y %H:%M") %> by <%= @user.first_name %> (<%= @user.username %>) <%= @user.last_name %></p>
  <br />
  <h2>Comment section:</h2>
  <% post.comments.each do |comment| %>
    <% @comment_user = User.find_by(id: comment.user_id) %>

      <p class="username" style="font-weight: bold"><%= @comment_user.first_name %> (<%= @comment_user.username %>) <%= @comment_user.last_name %></p>

    <p><%= comment.content %></p>
  <% end %>

  <%= form_for ([post, post.comments.build]) do |form| %>
    <%= form.label :comment %>
    <%= form.text_area :content %>

    <%= form.submit "Comment" %>

  <% end %>

  <% if post.user_id == current_user.id %>
    <p><%= link_to "Edit", edit_post_path(post) %> |
    <%= link_to "Delete", post, :data => { :confirm => "Are you sure you want to delete this post?" }, :method => :delete %></p>
  <% end %>

</div>
  <hr />
<% end %>
<%= link_to "Users", users_path %>

